!OrderedCollection methodsFor!

ifAbsentAdd: anObject

	^(self includes: anObject)
	ifTrue: [anObject] 
	ifFalse: [self add: anObject]! !
!OrderedCollection categoriesForMethods!
ifAbsentAdd:!public! !
!

!SmallInteger methodsFor!

isInChessRange
	^self >= 1 and: [self <= 8]! !
!SmallInteger categoriesForMethods!
